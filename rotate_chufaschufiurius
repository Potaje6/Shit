print_uso(){
	cat <<EOF

Script para usos extra침os y singulares que es mejor no explicar
Uso: ./rotate [-f fichero a reproducir]  [-p path] [-r ruta ficheros a rotar] [--play reproducir despues de rotar]

OJO!!! no pongas / al final de las rutas o seguramente petar치
pruebalo con while true ; do ./rotate --play ; done y echate unas risas


EOF
}

PLAY=0
PTH=/home/dmolinao/alla
FICH=activo.wav
REPRODUCIENDO=$PTH/$FICH
ROTATE=$PTH/infidel
WAVS=$(ls -1 $ROTATE/*wav | wc -l  | cut -d" " -f1)
TURNO=$(echo $(($RANDOM%$WAVS)))

print_uso(){
	cat <<EOF

Script para usos extra침os y singulares que es mejor no explicar
Uso: ./rotate [-f fichero a reproducir]  [-p path] [-r ruta ficheros a rotar] [--play reproducir despues de rotar]

OJO!!! no pongas / al final de las rutas o seguramente petar치
pruebalo con while true ; do ./rotate --play ; done y echate unas risas

Valores por defecto:
path general=$PTH
path de rotados=$ROTATE
cantidad de wavs=$WAVS

EOF
}




while [ $# -gt 0 ];
do
        case $1 in
        "--play") PLAY=1
        shift
;;
        "-f") FICH=$2
        shift
;;
        "-p") PTH=$2
        shift
;;
        "-r") ROTATE=$2
        shift
;;
        "-h") print_uso
        exit
;;
        *)
        shift
esac
done

#i=1
