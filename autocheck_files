put_files_lftp_ftp(){
echo
echo
echo "CHECK DE DESTINO de $FichConfig PATRON ${dest_file_dest}:"
echo "#######"
echo 
echo
echo "/usr/bin/lftp -u ${user_dest},${pass_dest} ftp://${host_dest}"
echo "cd "${path_dest}""
echo "dir"
echo "quit"
echo
echo "#buscar patron ${dest_file_dest}"
echo
echo "#END"
}

## funciones tipo=lftp_ftps
put_files_lftp_ftps(){
echo
echo
echo "CHECK DE DESTINO de $FichConfig PATRON ${dest_file_dest}:"
echo "#######"
echo 
echo
echo "/usr/bin/lftp -u ${user_dest},${pass_dest} ftps://${host_dest} -p ${port_dest}"
echo "cd ${path_dest}"
echo "dir"
echo "quit"
echo
echo "#buscar patron ${dest_file_dest}"
echo
echo "#END"
}


if [ $# -gt 2 ];
then
   echo "has metido mas de 2 parametros"
   print_uso
   exit
fi

if [ $# -eq 0 ];
then
   echo "no has metido parametros"
   print_uso
   exit
fi

while [ $# -gt 0 ];
do
        case $1 in
        "-o") FichConfig=$2
            ORIGEN=1
            launch_functions $FichConfig $ORIGEN $DESTINO
        exit
;;
        "-d") FichConfig=$2
            DESTINO=1
            launch_functions $FichConfig $ORIGEN $DESTINO
         exit
;;
        "-h") print_uso
        exit
;;

        *)
         FichConfig=$1
         ORIGEN=1
         DESTINO=1
         launch_functions $FichConfig $ORIGEN $DESTINO


         exit
esac
done